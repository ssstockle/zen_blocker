{
  "name": "Zen Blocker",
  "description": "You will regret wanting to doomscroll",
  "version": "1.0",
  "manifest_version": 3,
  "homepage_url": "https://github.com/ssstockle",
  "permissions": [
    "storage",
    "webNavigation",
    "tabs"
  ],
  "action": {
    "default_popup": "pages/popup.html",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "pages/blocked.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
